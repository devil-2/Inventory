                <!-- Toogle Function -->
                <script type="text/javascript">
        $(document).ready(function () {
            $("#checkbox1").val($(this).is(':checked'));

            $("#checkbox1").change(function () {
                if ($(this).is(":checked")) {
                    $(".toggle-box").css("visibility", "visible");
                } else {
                    $(".toggle-box").css("visibility", "hidden");
                }
            });
        });
                </script>
