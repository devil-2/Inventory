    <script type="text/javascript">
        $('#add-vendor1').click(function () {
            document.location = '@Url.Action("Index", "Customer")';
        });

        $('#numberbox').keyup(function () {
            if ($(this).val() > 100) {
                warnmsg("No numbers above 100");
                $(this).val('100');
            }
        });

        function checkshipdate() {
