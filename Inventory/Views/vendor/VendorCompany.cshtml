@if (ViewBag.records != null)
{

<div class="table-responsive" id="companyrecords">
    <table class="table  table-borderedtable-striped bulk_action" id="vendortable">
        <thead class="thead-inverse">
            <tr>
                <th>Vendor Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.records)
            {
                <tr>
                    <td> @item.Company_Name </td>
                    <td> @item.Email </td>
                    <td>
                        <div class="btn-group">
                            <button data-toggle="dropdown" class="btn btn-default dropdown-toggle" type="button" aria-expanded="false"> <i class="fa fa-ellipsis-v" aria-hidden="true"></i></button>
                            <ul class="dropdown-menu">
                                <li> <a onclick="getEditDetails(@item.company_Id)"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit Vendor</a> </li>
                                <li> <a onclick="deleteRecord(@item.company_Id)"><i class="fa fa-trash-o" aria-hidden="true"></i>Delete Vendor</a> </li>
                                <li> <a><i class="fa fa-money" aria-hidden="true"></i>Make Payment</a> </li>
                                <li> <a><i class="fa fa-money" aria-hidden="true"></i>Create PO</a> </li>
                                <li> <a><i class="fa fa-building-o" aria-hidden="true"></i>Create Invoice</a> </li>
                                <li> <a><i class="fa fa-eye" aria-hidden="true"></i>View Vendor</a> </li>
                                <li> <a><i class="fa fa-truck" aria-hidden="true"></i>Create Delivery Note</a> </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

}

