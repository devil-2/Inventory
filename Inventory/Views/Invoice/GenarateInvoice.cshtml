
@*<div id="sravaniadded" style="display:none">*@

    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="row">
                <div class="form-title col-xs-12 col-md-12">Invoice</div>
            </div>
        </div>
    </div>
    <div class="row margin-bottom">
        <div class="col-xs-12 col-md-3 logo margin-bottom"> <img src="images/logo.jpg" alt="Logo" /> <span class="vendorname">Xsilica Software Solutions</span> </div>
        <div class="address col-xs-12 col-md-3 margin-bottom">
            <span>Billing Address</span><br />
            Fedex Solutions Pvt.Ltd,<br />
            H.No.8-2-120/112/B/5&6,<br />
            3rd Floor, BBR Forum,<br />
            Road No.2, Banjara Hills,<br />
            Hyderabad-500034.
        </div>
        <div class="address col-xs-12 col-md-3 margin-bottom">
            <span>Shipping Address</span><br />
            Fedex Solutions Pvt.Ltd,<br />
            H.No.8-2-120/112/B/5&6,<br />
            3rd Floor, BBR Forum,<br />
            Road No.2, Banjara Hills,<br />
            Hyderabad-500034.
        </div>
        <div class="col-xs-12 col-md-3 margin-bottom">
            <div class="row padding-bottom date"> Date : 05/10/2017 </div>
            <div class="row invoice-total-amount"> Rs <span>40123</span> </div>
        </div>
    </div>
    <div class="row padding-bottom">
        <div class="col-xs-12 col-md-7 to-address margin-bottom"> <span>To : Fedex Company</span> </div>
        <div class="col-xs-12 col-md-5 margin-bottom">
            <div class="row">
                <div class="col-xs-12 col-md-4 po-number">Invoice Number</div>
                <div class="col-xs-12 col-md-8">
                    <input type="text" class="form-control" placeholder="Enter Invoice">
                </div>
            </div>
        </div>
    </div>
    <div class="row po-date">
        <table class="table table-bordered col-xs-12 col-md-12">
            <thead>
            </thead>
            <tbody>
                <tr>
                    <td class="col-xs-6 col-md-2">Payment Date</td>
                    <td class="col-xs-6 col-md-4">
                        <div class="input-group">
                            <div class="input-group-addon"> <i class="fa fa-calendar"> </i> </div>
                            <input class="form-control" id="date" name="date" placeholder="MM/DD/YYYY" type="text" />
                        </div>
                    </td>
                    <td class="col-xs-6 col-md-2">Payment Terms</td>
                    <td class="col-xs-6 col-md-4">
                        <input type="text" class="form-control" placeholder="" value="">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row padding-top invoice">
        <div class="col-xs-12 col-md-12">
            <div class="total table-responsive">
                <table class="table  table-borderedtable-striped bulk_action" id="vendortable">
                    <thead class="thead-inverse">
                        <tr>
                            <th class="col-md-2">PO No</th>
                            <th class="col-md-2">Product id</th>
                            <th class="col-md-3">Product Name</th>
                            <th class="col-md-2">Description</th>
                            <th class="col-md-1">Quantity</th>
                            <th class="col-md-1">Price</th>
                            <th class="col-md-1">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.records != null)
                        {
                            foreach (var item in ViewBag.records)
                            {
                                <tr>
                                    <td class="col-md-2">@item.Prchaseorder_no</td>
                                    <td class="col-md-2 image">@item.product_id </td>
                                    <td class="col-md-3 product-name"><a href="#">@item.product_name</a></td>
                                    <td class="col-md-2 product-variation"><span>@item.description</span></td>
                                    <td class="col-md-1 quantity-changes">@item.Quantity</td>
                                    <td class="col-md-1 product-variation"><text class="localization"></text> <span>@item.cost_price</span></td>
                                    <td class="col-md-1 product-price"><text class="localization"></text> <span>@item.total_price</span></td>
                                </tr>
                            }
                        }

                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

@*</div>*@
