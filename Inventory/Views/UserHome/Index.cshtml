    <script>
        $(document).ready(function () {
            var accountprogress = '@Inventory.Models.ProgressBar.Registration';
            $("#progressbar").addClass("progress-bar progress-bar-danger").css('width', accountprogress);
            document.getElementById('status').innerHTML = accountprogress;
            //history.pushState(document.URL, null, document.URL.split('?')[0])
        });
    </script>
</body>
</html>