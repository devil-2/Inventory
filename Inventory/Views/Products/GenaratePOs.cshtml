            if (MMM < 10) {
                MMM = '0' + MMM
            }
            var yyyy = today.getFullYear();
            today1 = dd + '/' + MMM + '/' + yyyy;
            a = new Date(yyyy, MMM, dd);
            b = new Date(shipdate.split('/')[2], shipdate.split('/')[1], shipdate.split('/')[0]);
            if (b <= a) {
                warnmsg("Select a Date Greater than Today.");
                $('#shipping_date').val("");
            }
        }

    </script>
}


