@if (ViewBag.records != null)
{
<div class="row">
    <div class="col-md-12 table-responsive table-hover">
        <table class="table" id="contacttable">
            <thead class="thead-inverse">
                <tr>
                    @*<th></th>*@
                    <th>Profile Picture</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>E-Mail</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var item in ViewBag.records)
                {
                    <tr>
                       <td>@if (item.image != "" && item.image != null && item.image != "/images/user.png")

                       { 
                           <img src="data:image;base64,@item.image" style="width:29px;height:29px;border-radius:50%;margin-left:10px;"/> 
                       }
                       else
                       {
                           <img src="~/images/user.png" style="width:29px;height:29px;border-radius:50%;margin-left:10px;"/> 
                       }
                        </td>
                        <td>@item.Contact_PersonFname</td>
                        <td>@item.Contact_PersonLname</td>
                        <td>@item.emailid</td>
                        <td>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-default dropdown-toggle" type="button" aria-expanded="false"> <i class="fa fa-ellipsis-v" aria-hidden="true"></i></button>
                                <ul class="dropdown-menu">
                                    <li> <a href="#"  onclick="editcontactperson(@item.Vendor_Id)"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit</a> </li>
                                    <li> <a href="#" onclick="inviteVendor(@item.Vendor_Id)"><i class="fa fa-trash-o" aria-hidden="true"></i>Invite</a> </li>
                                    <li> <a href="#" onclick="deleteVendor(@item.Vendor_Id)"><i class="fa fa-trash-o" aria-hidden="true"></i>Delete</a> </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
      
    </div>
</div>
}
