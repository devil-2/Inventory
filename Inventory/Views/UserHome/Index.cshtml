@model Inventory.Models.UserMaster
@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/UserMaster.cshtml";
    Layout = null;
}
<!-- bootstrap-progressbar -->
<link href="../vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet">
<!-- Custom Theme Style -->
<link href="../build/css/custom.min.css" rel="stylesheet">
<html>
<head>
</head>
<body style="background:#ffffff;color:black">
    @*<div class="">50%(Progress Bar Under Development......)
            <div class="progress progress_sm" style="width: 76%;">
                <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="80" aria-valuenow="79" style="width: 50%;"></div>
            </div>
        </div>*@
    @*<div id="progressbar" style="width:75%"></div>37%*@
    <div align="center">
        <div class="progress" style="width:70px;height:20px">
            <div id="progressbar" class="" data-transitiongoal="95" aria-valuenow="95" style="font-size:12px"><text id="status"></text></div>
        </div>
    </div>
    
    <form method="post">
        <div align="center">
            <div id="localization">
                <h2>Localization</h2>
                <table class="pdTable" width="395" cellspacing="0" cellpadding="5">
                    <tbody>
                        <tr>
                            <td width="200"><span data-bind="text:app.tl('Date Format')+':'">Date Format:</span></td>
                            <td>
                                @Html.DropDownList("Country", new List<SelectListItem>
   {
     new SelectListItem { Text = "DD/MM/YYYY", Value = "1"},
     new SelectListItem { Text = "MM/DD/YYYY", Value = "2"},
     new SelectListItem {Text  = "YYYY/MM/DD",Value="3"}
  }, "Select Date Format")
                            </td>
                        </tr>
                        <tr>
                            <td class="odd" width="200"><span><!--ko text:app.tl('Time Zone')-->Time Zone<!--/ko-->:</span></td>
                            <td>@Html.DropDownList("timeZoneInfo", new SelectList(ViewBag.timeZoneInfos), "Select Time Zone")</td>
                        </tr>
                    </tbody>
                </table>
                <input type="button" value="Skip" onclick="$('#localization').css('display', 'none')" />
                <input type="button" value="Continue" />
            </div>

            <h2 align="center">Current User Details</h2>
            <br />

            <table align="center" style="border-style:double;">
                <tr>
                    <td>Full Name</td>
                    <td>@Model.First_Name @Model.Last_Name</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Model.EmailId</td>
                </tr>
                <tr>
                    <td>Account Creation Date</td>
                    <td>@Model.Created_Date</td>
                </tr>
                <tr>
                    <td>User Site</td>
                    <td>@Model.User_Site</td>
                </tr>
                <tr>
                    <td>Company Name</td>
                    <td>@Model.CompanyName</td>
                </tr>
                <tr>
                    <td>Contact Number</td>
                    <td>@Model.Phone</td>
                </tr>
            </table>
            <br />
            <p align="center">Your Login Access is about to expire in @ViewBag.accessexpiry Days.</p>
            <div align="center">
                <a class="btn btn-default form-control" style="border:double" href="~/UserProfile?email=@Model.EmailId&&usertype=@Model.UserTypeId&&site=@Model.User_Site">Edit Profile</a>
                <a class="btn btn-default form-control" style="border:double" href="~/AvailableCompanies?email=@Model.EmailId">Log Out</a>
            </div>
        </div>
    </form>
    <!-- jQuery -->
    <script src="../vendors/jquery/dist/jquery.min.js"></script>
    <!-- bootstrap-progressbar -->
    @*<script src="../vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>*@
